extends /layout/layout

block data
  -
    page = {
      canonical: CANONICAL_ROOT,
      page_type: 'article',
      og_image: 'ogp.png',
      title: 'ページタイトル',
      description: 'ページディスクリプション',
      // keywords: 'ページキーワード',
