block css
  link(href=CSS_DIR + 'index.css' rel='stylesheet' type='text/css')

block script
  script(src=JS_DIR + 'index.js' type='text/javascript' charset='UTF-8')
block content
  section
    .sample1
      h1.sample1__ttl sample1 block-animation
      .sample1__block
        canvas.sample1-webgl.pc
        canvas.sample1-webgl-sp.sp
        video.sample1__video(style="display:none" src=IMAGE_DIR+"sample1/movie_1.mp4" autoplay loop muted playsinline)
        video.sample1__video(style="display:none" src=IMAGE_DIR+"sample1/movie_2.mp4" autoplay loop muted playsinline)
        video.sample1__video(style="display:none" src=IMAGE_DIR+"sample1/movie_3.mp4" autoplay loop muted playsinline)
        video.sample1__video(style="display:none" src=IMAGE_DIR+"sample1/movie_4.mp4" autoplay loop muted playsinline)
        video.sample1__video(style="display:none" src=IMAGE_DIR+"sample1/movie_5.mp4" autoplay loop muted playsinline)

    .sample2
      h1.sample2__ttl sample2 text-rotation
      .sample2__block
        canvas.sample2-webgl

    .sample3
      h1.sample3__ttl sample3 cubes
      .sample3__block
        canvas.sample3-webgl

